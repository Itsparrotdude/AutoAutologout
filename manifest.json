{
    "manifest_version": 3,
    "name": "Auto Page Reloader",
    "version": "1.0",
    "permissions": ["tabs"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "html/popup.html",
      "default_icon": "images/autologout.png"
    },

    "content_scripts": [
        {
          "matches": [
              "https://*.forgeofempires.com/*",
              "https://www.google.com/",
              "https://*/*"
          ],
          "include_globs": [
              "*forgeofempires.com/game*",
              "https://www.google.com/",
              "https://*/*"
          ],
          "run_at": "document_start",
          "js": [
            "js/content.js"
          ],
          "css": ["css/popup.css"]
        }
      ],

    "web_accessible_resources": [
        {
          "resources": [
            "html/popup2.html",
            "js/*",
            "vendor/*",
            "css/*",
            "html/*",
            "images/leroy.png",
            "chrome-extension://nljfmbeipfjdgonopegbbonkphajhgen/html/popup2.html",
            "images/settingsimage.png"
          ],
          "matches": ["https://*/*"]
        }
    ],

    "externally_connectable": {
		"matches": ["https://*.forgeofempires.com/*", "https://www.google.com/"],
	  "ids": ["*"]
	}
  }
  